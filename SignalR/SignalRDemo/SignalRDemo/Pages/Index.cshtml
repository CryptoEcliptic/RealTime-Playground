@page
<link rel="stylesheet" href="~/css/site.css" />
<div class="container-main">
    <div class="container-fluid-home">
        <br />
        <div class="row">
            <div class="statistics-box">
                <p>Statistics</p>
                <div id="date-time" class="col-12"></div>
            </div>
        </div>
        <div class="row">
            <img id="rotating-chicken" class="offset-6" src="~/images/cute-pterodactyl-cartoon_50699.jpg" />
        </div>
    </div>
    <div id="chicken-outer-container" class="row col-md-12">
        <p class="col-md-1" id="chicken-paragraph">1. Chickens are raised with love and care... &#127803; &#127803; &#127803;</p>
        <div id="chicken-container" class="container col-md-5"></div>
        <p class="col-md-1" id="chicken-paragraph">2. Chickens are packed and ready to go...</p>
        <div id="box-container" class="col-md-5">
        </div>
    </div>
    <div class="row offset-3">
        <img style="max-height:203px" src="~/images/train-car.jpg" />
        <img style="max-height:203px" src="~/images/train-car.jpg" />
        <img style="max-height:203px" src="~/images/train-car.jpg" />
        <img src="~/images/moving-locomotive.gif" />
        <img src="~/images/barrier.gif" />

    </div>
    <!-- Modal Starts-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
